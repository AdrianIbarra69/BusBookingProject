<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="900.0" prefWidth="1600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.busbookingproject.BusBookingController">

    <top>
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 10;" text="Bus Booking System" BorderPane.alignment="CENTER" />
    </top>

    <left>
        <VBox prefWidth="400.0" spacing="15" style="-fx-padding: 15; -fx-border-color: lightgray; -fx-border-width: 0 1 0 0;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Add New Booking" />

            <GridPane hgap="10" vgap="10">
                <Label text="Passenger Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="nameField" promptText="Enter passenger name" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Contact Info:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="contactField" promptText="Enter contact info" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="From:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <ComboBox fx:id="fromComboBox" prefWidth="200.0" promptText="Select origin" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="To:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <ComboBox fx:id="toComboBox" prefWidth="200.0" promptText="Select destination" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <DatePicker fx:id="datePicker" prefWidth="200.0" promptText="Select date" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Available Trips/Buses:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <ComboBox fx:id="availableTripsComboBox" prefWidth="250.0" promptText="Select route and date first" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Label text="Seats:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <Button fx:id="selectSeatsButton" onAction="#onSelectSeatsAction" prefHeight="25.0" prefWidth="200.0" text="View/Select Seats" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                <columnConstraints>
                    <ColumnConstraints />
                    <ColumnConstraints />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>
            </GridPane>

            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10 0 0 0;">  <Button onAction="#onAddBooking" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Add Booking" />
                <Button onAction="#onClearForm" style="-fx-background-color: #ffc107; -fx-text-fill: black;" text="Clear Form" />
            </HBox>

            <VBox spacing="5" style="-fx-padding: 20 0 0 0;"> <Label style="-fx-font-weight: bold;" text="Selected Route &amp; Date Details" />
                <HBox spacing="5"><Label minWidth="40" text="From:" /><Label fx:id="selectedFromLabel" text="N/A" /></HBox>
                <HBox spacing="5"><Label minWidth="40" text="To:" /><Label fx:id="selectedToLabel" text="N/A" /></HBox>
            </VBox>

        </VBox>
    </left>

    <center>
        <VBox spacing="10" style="-fx-padding: 15;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Current Bookings" />
            <TableView fx:id="bookingTable" prefHeight="500.0" VBox.vgrow="ALWAYS"> <columns>
                <TableColumn fx:id="nameColumn" prefWidth="120.0" text="Passenger Name" />
                <TableColumn fx:id="contactColumn" prefWidth="100.0" text="Contact" />
                <TableColumn fx:id="fromColumn" prefWidth="100.0" text="From" />
                <TableColumn fx:id="toColumn" prefWidth="100.0" text="To" />
                <TableColumn fx:id="busNameColumn" prefWidth="100.0" text="Bus Name" />
                <TableColumn fx:id="dateColumn" prefWidth="100.0" text="Date" />
                <TableColumn fx:id="seatsColumn" prefWidth="120.0" text="Seats Booked" /> <TableColumn fx:id="fareColumn" prefWidth="100.0" text="Fare" />
                <TableColumn fx:id="paymentStatusColumn" prefWidth="110.0" text="Payment Status" />
                <TableColumn fx:id="changeColumn" prefWidth="100.0" text="Change Given" />
                <TableColumn fx:id="actionColumn" prefWidth="120.0" text="Action" />
            </columns>
                <placeholder>
                    <Label text="No bookings yet." />
                </placeholder>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10; -fx-border-color: lightgray; -fx-border-width: 1 0 0 0;">
            <Button onAction="#onExit" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Exit Application" />
        </HBox>
    </bottom>

</BorderPane>
