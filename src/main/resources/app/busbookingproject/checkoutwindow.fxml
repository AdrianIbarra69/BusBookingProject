<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.busbookingproject.CheckoutWindowController" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Booking Checkout" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <GridPane hgap="10" vgap="8">
        <padding><Insets top="10" bottom="10" left="10" right="10"/></padding>
        <Label text="Passenger Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/><Label fx:id="nameLabel" text="N/A" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="Contact:" GridPane.rowIndex="1" GridPane.columnIndex="0"/><Label fx:id="contactLabel" text="N/A" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label text="From:" GridPane.rowIndex="2" GridPane.columnIndex="0"/><Label fx:id="fromLabel" text="N/A" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <Label text="To:" GridPane.rowIndex="3" GridPane.columnIndex="0"/><Label fx:id="toLabel" text="N/A" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <Label text="Bus Name:" GridPane.rowIndex="4" GridPane.columnIndex="0"/><Label fx:id="busNameLabel" text="N/A" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        <Label text="Date:" GridPane.rowIndex="5" GridPane.columnIndex="0"/><Label fx:id="dateLabel" text="N/A" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        <Label text="Seats:" GridPane.rowIndex="6" GridPane.columnIndex="0"/><Label fx:id="seatsLabel" text="N/A" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
        <Label text="Total Fare:" GridPane.rowIndex="7" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/><Label fx:id="totalFareLabel" text="â‚±0.00" GridPane.rowIndex="7" GridPane.columnIndex="1" style="-fx-font-weight: bold;"/>
    </GridPane>

    <Label text="Payment Method:"/>
    <ComboBox fx:id="paymentMethodComboBox" prefWidth="250.0" promptText="Select Payment Method"/>

    <Label text="Enter Payment Amount:"/>
    <TextField fx:id="paymentField" promptText="Enter amount"/>
    <Button fx:id="processPaymentButton" text="Process Payment" onAction="#onProcessPayment" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
    <Label fx:id="paymentStatusLabel" text="" style="-fx-font-size: 14px;"/>
    <Button text="Close" onAction="#onClose" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
</VBox>